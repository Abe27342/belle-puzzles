{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"incremental": true,
		"composite": true,
		"declaration": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"outDir": "./dist/",
		"rootDir": "./src",
		"skipLibCheck": true,
		"sourceMap": true,
		"target": "ESNext"
	},
	"include": ["src/**/*"]
}
